<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-8">
                            <STRONG style="margin-left: 40%;font-size: large">Welcome to RESTIFY</STRONG>
                        </div>

                    </div>
                    <hr>
                </div>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="#" class="active" id="login-form-link">Login</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="register-form-link">Register</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" role="form" style="display: block;">
                                <div class="form-group">
                                    <input type="text" name="apikey" id="apikey" tabindex="1" class="form-control" required="required" placeholder="Apikey" value="" >
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
                                        </div>
                                    </div>
                                </div>
                                <div id ="result">

                                </div>

                            </form>
                            <form id="register-form" role="form" style="display: none;">
                                <div class="form-group">
                                    <input type="text" name="user_ApiKey" id="user_Apikey" tabindex="1" class="form-control" required="required" placeholder="Apikey" value="">
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" id="email" tabindex="1" class="form-control" required="required" placeholder="Email Address" value="">
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#login-submit").click(function(e){
        e.preventDefault();
        var apikey = $("#apikey").val();
        $("#result").empty();

        console.log("clicked");
        console.log(apikey);
 var s = {"apikey":apikey};
        $.ajax({
            type: 'POST',
            url: 'verify',
            data: JSON.stringify(s),
            cache: false,
            contentType: "application/json",

            success: function (data) {
                console.log("success", data);
                if(data=='success'){
                    window.location.href = "restify";  // replace

                }

                else{
                    $("#result").append("Wrong ApiKey");
                }

            },
            error:function (err) {
                console.log("failure",err.responseText);

            }

        });

    })

    $("#register-submit").click(function(e){
        e.preventDefault();
        var apikey = $("#user_Apikey").val();
        var email = $("#email").val();

        console.log("clicked");
        console.log(apikey);
        var s = {"user_Apikey":apikey,"email":email};
        $.ajax({
            type: 'POST',
            url: 'register',
            data: JSON.stringify(s),
            cache: false,
            contentType: "application/json",

            success: function (data) {
                console.log("success", data);
                if(data=='success'){
                    alert("Registration Successfull");

                }



            },
            error:function (err) {
                console.log("failure",err.responseText);

            }

        });

    })
</script>